<h1>Records</h1>
<div class="row">
  {{#each records}}
  <div class="col s12 m4">
    <div class="card">
      <div class="card-image">
        {{#if user}}
          {{{editIcon user.id ../user.id id}}}
        {{else}}
        {{/if}}
      </div>
      <div class="card-content center-align">
        <h5>{{ title }}</h5>
        <p class="story-text">{{ truncate (stripTags body) 150 }}</p>
        <br>
        <div class="chip">
          <img src="{{ user.image }}" alt="{{ user.firstName }}"> <a href="/users/{{ user.id }}">{{ user.firstName }}</a>
        </div>
      </div>
      <div class="card-action center-align">
        <a class="btn grey" href="/records/{{ id }}">
          Read More
        </a>
      </div>
    </div>
  </div>
  {{else}}
  <p>No records found.</p>
  {{/each}}
</div>