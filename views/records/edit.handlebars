<h1>Edit Record</h1>
<div class="row">
  <form class="col s12" action="/records/{{ record.id }}?_method=PUT" method="post">
    <input type="hidden" name="_method" value="PUT">
    <div class="row">
      <div class="input-field">
        <input type="text" name="title" value="{{ record.title }}">
        <label for="title">Title</label>
      </div>
    </div>

    <div class="row">
      <div class="input-field">
        <select name="status">
          {{#select record.status}}
          <option value="public" selected>Public</option>
          <option value="private">Private</option>
          <option value="unpublished">Unpublished</option>
          {{/select}}
        </select>
        <label for="status">Status</label>
      </div>
    </div>

    <div class="row">
      <p>
        <input type="checkbox" name="allowComments" class="filled-in" id="filled-in-box" {{#if record.allowComments }} checked="checked"{{/if}}>
        <label for="filled-in-box">Allow Comments</label>
      </p>
    </div>

    <div class="row">
      <div class="input-field">
        <h5>Record</h5>
        <textarea name="body" rows="8" cols="80">{{ record.body }}</textarea>
      </div>
    </div>

    <input type="submit" name="submit" value="Submit" class="btn">
  </form>
</div>
