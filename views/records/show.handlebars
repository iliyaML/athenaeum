<br>
<div class="row">
  <div class="col s12 m8">
    <div class="card story">
      <div class="card-content">
        <span class="card-title"><b>{{ record.title }}</b>, <small>{{ formatDate record.date 'MMMM Do YYYY' }}</small></span>
        {{ stripTags record.body }}
      </div>
    </div>
  </div>
  <div class="col s12 m4">
    <div class="card center-align">
      <div class="card-content">
        <span class="card-title">{{ record.user.firstName }} {{ record.user.lastName }}</span>
        <img src="{{ record.user.image }}" alt="{{ record.user.firstName }}" class="circle responsive-img">
      </div>
      <div class="card-action">
        <a href="/users/records/{{ record.user.id }}">More From {{ record.user.firstName }}</a>
      </div>
    </div>
  </div>
</div>
